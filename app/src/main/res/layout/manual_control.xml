<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragments"
    >

    <ImageButton
        android:src="@drawable/ic_action_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonNext"
        android:layout_alignTop="@+id/buttonOnoff"
        android:layout_toEndOf="@+id/buttonOnoff"
        android:elevation="3dp" />

    <ImageButton
        android:src="@drawable/ic_action_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonBack"
        android:layout_alignTop="@+id/buttonOnoff"
        android:layout_toStartOf="@+id/buttonOnoff"
        android:elevation="3dp" />

    <ImageButton
        android:src="@drawable/ic_action_light_off"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonOnoff"
        android:elevation="3dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/ic_action_dark"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonDark"
        android:elevation="3dp"
        android:layout_below="@+id/buttonNext"
        android:layout_toEndOf="@+id/buttonBack" />

    <ImageButton
        android:src="@drawable/ic_action_bright"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/buttonBright"
        android:elevation="4dp"
        android:layout_above="@+id/buttonBack"
        android:layout_toEndOf="@+id/buttonBack" />

    <TextView
        android:text="Next color"
        android:rotation="90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/buttonNext" />

    <TextView
        android:text="Prev. color"
        android:rotation="90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toStartOf="@+id/buttonBack" />

    <TextView
        android:text="Dim"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/buttonDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Brighten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/buttonBright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>